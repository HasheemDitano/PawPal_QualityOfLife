@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="hero-title mb-4">
                <span class="hero-main">PawPal Quality of Life</span><br>
                <span class="hero-highlight">Assessment</span>
            </h1>
            <p class="hero-subtitle mb-4">
                Every pet deserves the best care. Every assessment is a step toward better wellbeing.
            </p>
            <p class="hero-description mb-5">
                <span class="text-primary fw-semibold">Discover comprehensive insights</span> 
                into your pet's health and happiness with our professional assessment tool.
            </p>
            
            <div class="cta-section">
                <a asp-action="Assessment" class="btn btn-primary btn-lg rounded-pill px-5 py-3 me-3 mb-3">
                    <i class="fas fa-paw me-2"></i>
                    Start Assessment
                </a>
                <a href="#learn-more" class="btn btn-outline-secondary btn-lg rounded-pill px-4 py-3 mb-3">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>

<div id="learn-more" class="features-section">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-clipboard-list fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Comprehensive Assessment</h5>
                        <p class="feature-description">
                            Evaluate all key aspects of your pet's quality of life including pain, mobility, appetite, and happiness.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-chart-bar fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Visual Results</h5>
                        <p class="feature-description">
                            Get easy-to-understand scoring with visual progress bars and personalized recommendations.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-user-md fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Professional Standards</h5>
                        <p class="feature-description">
                            Based on veterinary quality of life standards and best practices for pet healthcare.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="info-section mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="info-card">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center mb-3 mb-md-0">
                        <div class="info-icon">
                            <i class="fas fa-heart fa-3x"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h4 class="info-title mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            About This Assessment Tool
                        </h4>
                        <p class="info-text mb-0">
                            Our pet quality of life assessment tool helps you evaluate your beloved companion's wellbeing in a structured, 
                            comprehensive way. While this tool provides valuable insights and personalized recommendations, 
                            it should complement—not replace—regular veterinary care. If you have concerns about your pet's health, 
                            always consult with a qualified veterinarian for proper diagnosis and treatment.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bottom-cta mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="cta-card text-center">
                <h4 class="cta-title mb-3">
                    <i class="fas fa-heart text-danger me-2"></i>
                    Ready to Help Your Pet Live Their Best Life?
                </h4>
                <p class="cta-text mb-4">
                    Take the first step toward understanding your pet's needs with our comprehensive assessment.
                </p>
                <a asp-action="Assessment" class="btn btn-primary btn-lg rounded-pill px-5">
                    Begin Assessment Now
                </a>
            </div>
        </div>
    </div>
</div>
