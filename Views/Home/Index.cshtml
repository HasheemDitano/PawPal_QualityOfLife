@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="hero-title mb-4">
                <span class="hero-main">PawPal Quality of Life</span><br>
                <span class="hero-highlight">Assessment & Management</span>
            </h1>
            <p class="hero-subtitle mb-4">
                Every pet deserves the best care. Every assessment is a step toward better wellbeing.
            </p>
            <p class="hero-description mb-5">
                <span class="text-primary fw-semibold">Manage your pets and track their health</span> 
                with our comprehensive assessment and management tools.
            </p>
            
            <div class="cta-section">
                <a asp-controller="Pets" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 py-3 me-3 mb-3">
                    <i class="fas fa-paw me-2"></i>
                    Manage My Pets
                </a>
                <a asp-action="Assessment" class="btn btn-success btn-lg rounded-pill px-4 py-3 me-3 mb-3">
                    <i class="fas fa-clipboard-check me-2"></i>
                    Quick Assessment
                </a>
                <a href="#learn-more" class="btn btn-outline-secondary btn-lg rounded-pill px-4 py-3 mb-3">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>

<div class="quick-actions-section mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h3 class="text-center mb-4">Quick Actions</h3>
            <div class="row g-3">
                <div class="col-md-3">
                    <a asp-controller="Pets" asp-action="Create" class="quick-action-card d-block text-decoration-none">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-plus-circle fa-2x text-primary mb-2"></i>
                                <h6 class="card-title">Add New Pet</h6>
                                <p class="card-text small text-muted">Register a new pet in the system</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Pets" asp-action="Index" class="quick-action-card d-block text-decoration-none">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-list fa-2x text-info mb-2"></i>
                                <h6 class="card-title">View All Pets</h6>
                                <p class="card-text small text-muted">Manage your pet records</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Home" asp-action="Assessment" class="quick-action-card d-block text-decoration-none">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="fas fa-clipboard-check fa-2x text-success mb-2"></i>
                                <h6 class="card-title">Quick Assessment</h6>
                                <p class="card-text small text-muted">One-time assessment tool</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <i class="fas fa-chart-line fa-2x text-warning mb-2"></i>
                            <h6 class="card-title">Reports</h6>
                            <p class="card-text small text-muted">Coming soon...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="learn-more" class="features-section">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-database fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Pet Management</h5>
                        <p class="feature-description">
                            Store and manage multiple pets with detailed information including owner details and medical history.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-clipboard-list fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Assessment Tracking</h5>
                        <p class="feature-description">
                            Track quality of life assessments over time with comprehensive scoring and visual progress indicators.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-user-md fa-3x"></i>
                        </div>
                        <h5 class="feature-title">Professional Standards</h5>
                        <p class="feature-description">
                            Based on veterinary quality of life standards and best practices for comprehensive pet healthcare.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="info-section mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="info-card">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center mb-3 mb-md-0">
                        <div class="info-icon">
                            <i class="fas fa-heart fa-3x"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h4 class="info-title mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            About This Assessment Tool
                        </h4>
                        <p class="info-text mb-0">
                            Our pet quality of life assessment tool helps you evaluate your beloved companion's wellbeing in a structured, 
                            comprehensive way. Store multiple pets, track assessments over time, and get insights into their health trends.
                            While this tool provides valuable insights and personalized recommendations, 
                            it should complement—not replace—regular veterinary care. If you have concerns about your pet's health, 
                            always consult with a qualified veterinarian for proper diagnosis and treatment.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bottom-cta mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="cta-card text-center">
                <h4 class="cta-title mb-3">
                    <i class="fas fa-heart text-danger me-2"></i>
                    Ready to Help Your Pet Live Their Best Life?
                </h4>
                <p class="cta-text mb-4">
                    Start by adding your pets to the system and tracking their quality of life over time.
                </p>
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-controller="Pets" asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-5">
                        <i class="fas fa-paw me-2"></i>Add Your First Pet
                    </a>
                    <a asp-action="Assessment" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                        Try Quick Assessment
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
