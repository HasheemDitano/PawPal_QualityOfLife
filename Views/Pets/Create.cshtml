@model PawPal_QualityOfLife.Models.Pet

@{
    ViewData["Title"] = "Add New Pet";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-paw"></i> Add New Pet
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., Buddy, Whiskers" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Type" class="form-label"></label>
                                    <select asp-for="Type" class="form-select">
                                        <option value="">Select pet type...</option>
                                        <option value="Dog">Dog</option>
                                        <option value="Cat">Cat</option>
                                        <option value="Bird">Bird</option>
                                        <option value="Rabbit">Rabbit</option>
                                        <option value="Hamster">Hamster</option>
                                        <option value="Guinea Pig">Guinea Pig</option>
                                        <option value="Fish">Fish</option>
                                        <option value="Reptile">Reptile</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Age" class="form-label"></label>
                                    <input asp-for="Age" class="form-control" type="number" min="0" max="30" />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Breed" class="form-label"></label>
                                    <input asp-for="Breed" class="form-control" placeholder="e.g., Golden Retriever, Persian" />
                                    <span asp-validation-for="Breed" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">
                            <i class="fas fa-user"></i> Owner Information
                        </h5>

                        <div class="mb-3">
                            <label asp-for="OwnerName" class="form-label"></label>
                            <input asp-for="OwnerName" class="form-control" placeholder="Enter owner's full name" />
                            <span asp-validation-for="OwnerName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OwnerEmail" class="form-label"></label>
                                    <input asp-for="OwnerEmail" class="form-control" type="email" placeholder="owner@example.com" />
                                    <span asp-validation-for="OwnerEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OwnerPhone" class="form-label"></label>
                                    <input asp-for="OwnerPhone" class="form-control" placeholder="(555) 123-4567" />
                                    <span asp-validation-for="OwnerPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create Pet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}